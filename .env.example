# OmniBazaar Documentation Module Environment Configuration

# ========================================
# IPFS Configuration
# ========================================
IPFS_NODE_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080
IPFS_BOOTSTRAP_NODES=
IPFS_SWARM_KEY=
IPFS_REPO_PATH=~/.ipfs
IPFS_ENABLE_RELAY=true
IPFS_ENABLE_DISCOVERY=true

# ========================================
# AI/ML Configuration
# ========================================
AI_MODEL_PATH=./models
AI_INFERENCE_URL=http://localhost:8000
AI_TRAINING_URL=http://localhost:8001
AI_MODEL_CACHE_SIZE=1024
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TOP_P=0.9

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your-huggingface-api-key
HUGGINGFACE_MODEL_ID=microsoft/DialoGPT-medium

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# ========================================
# API Configuration
# ========================================
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000
API_CORS_ORIGIN=http://localhost:3001
API_JWT_SECRET=your-jwt-secret-key
API_SESSION_SECRET=your-session-secret-key

# GraphQL Configuration
GRAPHQL_ENDPOINT=/graphql
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io

# ========================================
# Database Configuration
# ========================================
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql://username:password@localhost:5432/omnibazaar_docs
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=omnibazaar_docs
DATABASE_USER=username
DATABASE_PASSWORD=password

# SQLite Configuration (Development)
SQLITE_DATABASE_PATH=./data/docs.sqlite

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# Authentication Configuration
# ========================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ========================================
# External Services Configuration
# ========================================

# GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=omnibazaar/omnibazaar
GITHUB_BRANCH=main
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_GUILD_ID=your-discord-guild-id
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Slack Integration
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@omnibazaar.com

# ========================================
# Analytics and Monitoring
# ========================================

# Analytics
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Application Performance Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=omnibazaar-documentation
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ========================================
# Content Management Configuration
# ========================================

# Translation Platform
TRANSLATION_PLATFORM=crowdin
CROWDIN_API_TOKEN=your-crowdin-api-token
CROWDIN_PROJECT_ID=your-crowdin-project-id

# Content Validation
CONTENT_VALIDATION_ENABLED=true
CONTENT_AUTO_FIX=false
CONTENT_BACKUP_ENABLED=true
CONTENT_BACKUP_INTERVAL=3600000

# Search Configuration
SEARCH_INDEX_NAME=omnibazaar_docs
SEARCH_MAX_RESULTS=50
SEARCH_FUZZY_THRESHOLD=0.7
ELASTICSEARCH_URL=http://localhost:9200

# ========================================
# Security Configuration
# ========================================

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/csp-report

# API Security
API_KEY_REQUIRED=false
API_KEY_HEADER=x-api-key

# ========================================
# Development Configuration
# ========================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug
DEBUG_MODE=true

# Hot Reload
HOT_RELOAD_ENABLED=true
WEBPACK_DEV_SERVER_PORT=3001

# Testing
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/omnibazaar_docs_test
TEST_TIMEOUT=30000
JEST_TIMEOUT=30000

# Mock Services
MOCK_AI_RESPONSES=false
MOCK_IPFS_OPERATIONS=false
MOCK_EXTERNAL_APIS=false

# ========================================
# Production Configuration
# ========================================

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# CDN Configuration
CDN_URL=
CDN_ENABLED=false

# Load Balancing
CLUSTER_MODE=false
CLUSTER_WORKERS=4

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ========================================
# Feature Flags
# ========================================

# AI Features
ENABLE_AI_RESPONSES=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_VOICE_QUERIES=false
ENABLE_IMAGE_ANALYSIS=false

# Community Features
ENABLE_USER_CONTRIBUTIONS=true
ENABLE_PEER_REVIEW=true
ENABLE_GAMIFICATION=false

# Advanced Features
ENABLE_FEDERATED_LEARNING=false
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_OFFLINE_MODE=true

# ========================================
# Performance Configuration
# ========================================

# Memory Management
MAX_MEMORY_USAGE=512MB
GARBAGE_COLLECTION_INTERVAL=300000

# Concurrency
MAX_CONCURRENT_REQUESTS=100
MAX_CONCURRENT_AI_INFERENCES=10
MAX_CONCURRENT_IPFS_OPERATIONS=50

# Timeouts
API_TIMEOUT=30000
AI_INFERENCE_TIMEOUT=10000
IPFS_OPERATION_TIMEOUT=15000
DATABASE_QUERY_TIMEOUT=5000

# ========================================
# Localization Configuration
# ========================================

# Default Locale
DEFAULT_LOCALE=en-US
FALLBACK_LOCALE=en-US

# Supported Locales
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,zh-CN,ja-JP,ko-KR,pt-BR,ru-RU,ar-EG

# RTL Support
RTL_LOCALES=ar-EG,ar-AE,he-IL,ur-PK,fa-IR

# ========================================
# Backup and Recovery Configuration
# ========================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Recovery Settings
AUTO_RECOVERY_ENABLED=true
RECOVERY_VERIFICATION_ENABLED=true

# ========================================
# Legal and Compliance Configuration
# ========================================

# Privacy
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# Terms and Conditions
TERMS_VERSION=1.0
PRIVACY_POLICY_VERSION=1.0